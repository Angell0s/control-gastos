# .env.example
# Copia este archivo a .env y completa los valores necesarios

# ============================
# === BASE DE DATOS (PostgreSQL) ====
# ============================
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=
POSTGRES_HOST=
POSTGRES_PORT=5432

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ==================
# === REDIS =========
# ==================
REDIS_HOST=
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# =========================
# === BACKEND (FastAPI) ===
# =========================
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ACCESS_TOKEN_EXPIRE_MINUTES_LONG=1080

API_HOST=0.0.0.0
API_PORT=8000

# ================================
# === USUARIO ADMINISTRADOR ======
# ================================
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_FIRST_NAME=Administrador
ADMIN_LAST_NAME=Sistema

# ============================
# === BOT DE TELEGRAM ========
# ============================
TELEGRAM_TOKEN=
TELEGRAM_WEBHOOK_URL=

# URL del backend (cámbialo según dónde esté corriendo tu API)
# Ejemplos comunes:
# - Dentro de docker-compose → http://backend:8000 o http://api:8000
# - Local sin docker → http://localhost:8000
# - Desarrollo con IP de red → http://192.168.x.x:8000
API_URL=

# ======================
# === FRONTEND (Next.js) ==
# ======================
NEXT_PUBLIC_API_URL=
NEXT_PUBLIC_APP_NAME=Control de Gastos

# ================
# === WORKER =====
# ================
WORKER_INTERVAL=3600
WORKER_LOG_LEVEL=INFO

# ==================
# === ENTORNO ======
# ==================
ENVIRONMENT=development
DEBUG=true

# ==================
# === OPENAI =======
# ==================
OPENAI_KEY=